<select class="form-control" id="selec">
    @foreach (var s in ViewBag.Stations)
    {
        <option id="station">@(s.IdStation + " : "+ s.Numero + " " + s.Adresse)</option>
    }
</select>

<button onclick="reserver()">Utiliser la voiture</button>

<script>

    function reserver() {
        console.log(location.href);
        var idBorne = document.getElementById("selec");
        console.log(idBorne);
        var txt = idBorne.options[idBorne.selectedIndex].text;
        @*console.log(splir);*@
        var id = txt.split(' ')[0];
        location.href = location.href + "/" + id
    }
</script>